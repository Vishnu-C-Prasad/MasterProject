<section>
    <!-- main content start -->
    <div class="main-content">

        <!-- content -->
        <div class="container-fluid content-top-gap">

            <!-- breadcrumbs -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb my-breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Users Management</li>
                </ol>
            </nav>
            <!-- //breadcrumbs -->

            <section class="pricing">
                <div class="card card_border mb-5">
                    <div class="cards__heading">
                        <h3>Users List</h3>
                    </div>
                    <div class="card-body">
                        <table class="table border table-responsive-sm" id="data-table">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th scope="col">Sl.No</th>
                                    <th scope="col">Profile Pic</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Date of join</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each userData}}
                                <tr id="{{this._id}}" class="{{#if this.blocked}}bg-danger{{else}}bg-slack{{/if}}">
                                    <th scope="row" class="serialNumber text-white"></th>
                                    <td>
                                        <div class="accountPic">
                                            <img src="{{#if this.profilePic}}{{this.profilePic}}{{else}}/images/user/profile.png{{/if}}"
                                                class="rounded-circle" alt="Image not found"
                                                onerror=this.src="/images/user/profile.png">
                                        </div>
                                    </td>
                                    <td class="text-white">
                                        {{this.name}}
                                    </td>
                                    <td class="text-white">{{this.email}}</td>
                                    <td class="text-white">{{#parseDate this.joinDate}}{{/parseDate}}</td>
                                    <td class="bg-info">
                                        <button class="btn btn-danger btn-sm rounded-pill text-uppercase px-3"
                                            onclick="deleteUser(event, '{{this._id}}', '{{this.name}}')">Delete</button>
                                        {{#if this.blocked}}
                                        <button class="btn btn-secondary btn-sm rounded-pill text-uppercase px-3"
                                            onclick="unblockUser(event, '{{this._id}}', '{{this.name}}')">Unblock</button>
                                        {{else}}
                                        <button class="btn btn-secondary btn-sm rounded-pill text-uppercase px-3"
                                            onclick="blockUser(event, '{{this._id}}', '{{this.name}}')">Block</button>
                                        {{/if}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

        </div>
        <!-- //content -->

    </div>
    <!-- main content end-->
</section>