<section>
    <!-- main content start -->
    <div class="main-content">

        <!-- content -->
        <div class="container-fluid content-top-gap">

            <!-- breadcrumbs -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb my-breadcrumb">
                    <li class="breadcrumb-item"><a href="/theatre">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Movies</li>
                </ol>
            </nav>
            <!-- //breadcrumbs -->

            <section class="pricing">
                <div class="card card_border mb-5">
                    <div class="cards__heading">
                        <h3>Enter Movie Details</h3>
                    </div>
                    <div class="card-body">
                        <div class="px-2 mb-4">
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <form action="/theatre/add-movies" method="POST" enctype="multipart/form-data">
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="movieTitle">Movie Title</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="text" name="movieTitle" class="form-control" required
                                                    id="movieTitle">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="cast">Cast</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="text" name="cast" class="form-control" required id="cast">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="director">Director</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="text" name="director" class="form-control" required
                                                    id="director">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="releaseDate">Release Date</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="date" name="releaseDate" class="form-control" required
                                                    id="releaseDate">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="runTime">Run Time</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="time" name="runTime" class="form-control" required id="runTime">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="language">Language</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="text" name="language" class="form-control" required
                                                    id="language">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="type">Type</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="text" name="type" class="form-control" required id="type">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="trailerLink">Trailer Link</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="url" name="trailerLink" class="form-control" required
                                                    id="trailerLink">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3 text-md-right">
                                                <label for="">Movie Poster</label>
                                            </div>
                                            <div class="col-md-9">
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <label class="btn btn-primary btn-sm rounded-pill px-md-4"
                                                            for="my-file-selector">
                                                            <input id="my-file-selector" required type="file"
                                                                name="moviePoster" style="display:none"
                                                                onchange="loadImage(event);">
                                                            Choose Image
                                                        </label>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <div class="ml-md-3 mt-3 mt-md-0" style="width: 10rem;">
                                                            <img src="" alt="" id="viewImage" class="img-fluid"
                                                                width="100%" height="auto">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit"
                                            class="btn btn-success float-right rounded-pill px-5">Submit</button>
                                        <a href="/theatre/movie-management" type="submit"
                                            class="btn btn-danger float-right rounded-pill px-5 mr-3">Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
        <!-- //content -->

    </div>
    <!-- main content end-->
</section>