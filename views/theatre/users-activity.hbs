<section>
    <!-- main content start -->
    <div class="main-content">

        <!-- content -->
        <div class="container-fluid content-top-gap">

            <!-- breadcrumbs -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb my-breadcrumb">
                    <li class="breadcrumb-item"><a href="/theatre">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Users Activity Track</li>
                </ol>
            </nav>
            <!-- //breadcrumbs -->

            <section class="pricing">
                <div class="card card_border mb-5">
                    <div class="cards__heading">
                        <h3>Users Activity Track</h3>
                    </div>
                    <div class="card-body">
                        <table class="table border table-responsive-sm" id="data-table">
                            <thead class="bg-success text-white">
                                <tr>
                                    <th scope="col">Sr.No</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Last Book</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <th scope="row" class="serialNumber"></th>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    {{#if this.orderDetails.0.orderDate}}
                                    <td>{{#parseDate this.orderDetails.0.orderDate}}{{/parseDate}}</td>
                                    <td><span class="border {{#IF this.orderDetails.0.status '==' "booked"}}text-success{{else}}text-danger{{/IF}} text-uppercase px-3">{{this.orderDetails.0.status}}</span></td>
                                    <td>Rs.{{this.orderDetails.0.totalAmount}}</td>
                                    {{else}} 
                                    <td>Nothing yet !</td>
                                    <td><span class="border text-success text-uppercase px-3">...</span></td>
                                    <td>...</td>
                                    {{/if}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

        </div>
        <!-- //content -->

    </div>
    <!-- main content end-->
</section>