<section class="container" style="height: 100vh !important;">
    <div class="row h-100 justify-content-center">
        <div class="col-md-4 my-auto">
            <div class="card card_border border-success-top p-4">
                <h3 class="text-center text-uppercase text-success font-weight-bold mb-5">Theatre Login</h3>
                <form action="/theatre/login" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Type your Email ID"
                            id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" placeholder="Type your Password" name="password"
                            id="exampleInputPassword1">
                    </div>
                    {{#if messages.error}}
                    <div class="text-center pb-2">
                        <p class="text-danger">{{messages.error}}</p>
                    </div>
                    {{/if}}
                    <div class="text-center">
                        <button type="submit" class="btn btn-success rounded-pill px-5">Submit</button>
                    </div>
                    <div class="text-center pt-3">
                        <a class="btn btn-danger text-white rounded-circle" title="Sign in with google" onClick="authPopup(event, '/theatre/auth/google')"><i class="fa fa-google"></i></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>